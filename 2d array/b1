#include <stdio.h>
int main()
{
    int arr[3][3]={{1,2,3},{4,5,6},{7,8,9}};
    int size =sizeof(arr[0])/sizeof(arr[0][0]);
    printf("Ma tran ban dau la: \n");
    for(int i=0;i<size;i++)
    {
        for(int j=0;j<size;j++)
        {
            printf("%d ",arr[i][j]);
        }
        printf("\n");
    }
    for(int i=0;i<size;i++)
        for(int j=0;j<size;j++)
        {
            printf("Nhap so dong %d cot %d ",i+1,j+1);
            scanf("%d",&arr[i][j]);
        }
    for(int i=0;i<size;i++)
    {
        for(int j=0;j<size;j++)
        {
            printf("%d ",arr[i][j]);
        }
        printf("\n");
    }
    
}
